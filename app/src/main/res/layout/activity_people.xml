<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBack">

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/txt_main"
            android:scaleType="fitCenter"
            android:scaleX="1.2"
            android:scaleY="1.2"/>
        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_menu"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rl_menu"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="선택 사항"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_datetag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_alignTop="@+id/tv_text"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/tv_text"
            android:textColor="#000000"
            android:text="시간"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_peopletag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_datetag"
            android:textColor="@color/black"
            android:text="사용인원"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_top">
        <ImageView
            android:id="@+id/bar1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/bar1"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="몇 명이\n사용하나요?"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_10up"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:src="@drawable/circle_large"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:tag="2" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_510"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toEndOf="@+id/btn_10up"
            android:layout_marginStart="-50dp"
            android:layout_above="@+id/btn_10up"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/circle_medium"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:tag="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_35"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toStartOf="@+id/btn_10up"
            android:layout_marginEnd="-30dp"
            android:layout_above="@+id/btn_10up"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/circle_small"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:tag="0"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pre"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/left"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>

</RelativeLayout>