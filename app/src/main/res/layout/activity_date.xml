<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBack"
    >
    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/txt_main"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_menu"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rl_menu"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="선택 사항"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_datetag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_alignTop="@+id/tv_text"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/tv_text"
            android:textColor="#000000"
            android:text="시간"
            android:padding="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_top">
        <ImageView
            android:id="@+id/bar1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/bar1"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="예약 날짜와 시각을\n입력해주세요."
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info">
        <RelativeLayout
            android:id="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center_vertical"/>
        <com.lukedeighton.wheelview.WheelView
            android:id="@+id/wv_day"
            android:layout_width="180dp"
            android:layout_height="360dp"
            app:wheelDrawable="@drawable/wheelview"
            android:layout_centerVertical="true"
            app:rotatableWheelDrawable="true"
            app:selectionAngle="0.0"
            app:wheelPosition="left"
            app:repeatItems="true"
            app:wheelItemCount="31"
            app:wheelRadius="180dp"
            app:wheelPadding="10dp"
            app:wheelItemRadius="30dp"
            app:emptyItemColor="@color/white"
            app:selectionColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/wv_day"
            android:layout_alignTop="@+id/wv_day"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="10dp"
            android:text="일"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />
        <com.lukedeighton.wheelview.WheelView
            android:id="@+id/wv_month"
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:layout_alignTop="@+id/wv_day"
            android:layout_marginTop="65dp"
            app:wheelDrawable="@drawable/wheelview"
            app:rotatableWheelDrawable="true"
            app:selectionAngle="0.0"
            app:wheelOffsetY="0dp"
            app:wheelPosition="left"
            app:repeatItems="true"
            app:wheelItemCount="3"
            app:wheelRadius="110dp"
            app:wheelPadding="10dp"
            app:wheelItemRadius="30dp"
            app:emptyItemColor="@color/white"
            app:selectionColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/wv_month"
            android:layout_alignTop="@+id/wv_month"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:text="월"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_weekday"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/rl_center"
            android:background="@color/white"
            android:layout_toEndOf="@+id/wv_day"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="금요일"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_weekday_eng"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:layout_toEndOf="@+id/wv_day"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_weekday"
            android:textSize="16sp"
            android:textColor="#777777"
            android:gravity="center"
            android:text="Friday"/>
        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/rl_center"
            android:background="@color/white"
            android:layout_toEndOf="@+id/tv_weekday" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>
</RelativeLayout>
