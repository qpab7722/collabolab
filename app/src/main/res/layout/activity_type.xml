<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBack">

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/txt_main"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_menu"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rl_menu"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="선택 사항"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_datetag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_alignTop="@+id/tv_text"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/tv_text"
            android:textColor="#000000"
            android:text="시간"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_peopletag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_datetag"
            android:textColor="@color/black"
            android:text="사용인원"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_typetag1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/tv_datetag"
            android:layout_below="@+id/tv_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:text="사용기기 1"
            android:textColor="@color/black"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_typetag2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_alignTop="@+id/tv_typetag1"
            android:text="사용기기 2"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_toRightOf="@+id/tv_typetag1"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_typetag3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:layout_alignTop="@+id/tv_typetag1"
            android:text="사용기기 3"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_toRightOf="@+id/tv_typetag2"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_top">
        <ImageView
            android:id="@+id/bar3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/bar3"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="어떤 자재를\n활용하나요?"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_typecom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_typebeam"
            android:layout_toStartOf="@+id/rl_typebeam"
            android:layout_marginEnd="-40dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_typecom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/com_off"
                android:scaleX="1.1"
                android:scaleY="1.1"/>
            <TextView
                android:id="@+id/tv_typecom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_typecom"
                android:layout_centerHorizontal="true"
                android:text="컴퓨터"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_typeboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_typebeam"
        android:layout_toEndOf="@+id/rl_typebeam"
        android:layout_marginStart="-40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_typeboard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/board_off"
            android:scaleX="1.2"
            android:scaleY="1.2"/>
        <TextView
            android:id="@+id/tv_typeboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_typeboard"
            android:layout_centerHorizontal="true"
            android:text="화이트보드"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_typeopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_typebeam"
            android:layout_toStartOf="@+id/rl_typebeam"
            android:layout_marginEnd="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_typeopen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/open_off"
                android:scaleX="1.2"
                android:scaleY="1.2"/>
            <TextView
                android:id="@+id/tv_typeopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_typeopen"
                android:layout_centerHorizontal="true"
                android:text="개방형"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_typebeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_typebeam"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/beam_off"
                android:scaleX="1.3"
                android:scaleY="1.3"/>
            <TextView
                android:id="@+id/tv_typebeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_typebeam"
                android:layout_centerHorizontal="true"
                android:text="빔 프로젝터"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_typefilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_typebeam"
            android:layout_toEndOf="@+id/rl_typebeam"
            android:layout_marginStart="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_typefilm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/camera_off"
                android:scaleX="1.3"
                android:scaleY="1.3"/>
            <TextView
                android:id="@+id/tv_typefilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_typefilm"
                android:layout_centerHorizontal="true"
                android:text="스튜디오"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_typend"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/btn_pre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/left"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>


</LinearLayout>